{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/plants" method="POST">
        <fieldset>
            <legend>Create New Plant</legend>
            <label class="form-label">Name: </label>
            <input 
                class="form-control"
                type="text" 
                name="name"
                required="true" 
                placeholder="Enter plant name"
            >
            <label class="form-label">Scientific Name:</label>
            <input 
                class="form-control"
                type="string" 
                name="scientific_name" 
                placeholder="Enter plant's scientific name" 
            >
            <label class="form-label">Description:</label>
            <textarea 
                class="form-control"
                type="string" 
                name="description" 
                placeholder="Describe plant here" 
            ></textarea>
            <label class="form-label">Perennial or Annual:</label>
            <select class="form-select" aria-label="Default select example" name="perrenial">
                <option selected>Perennial or Annual</option>
                <option class="form-control" type="string" value="Perennial">Perennial</option>
                <option class="form-control" type="string" value="Annual">Annual</option>
            </select>
            <label class="form-label">Sun conditions:</label>
            <select class="form-select" aria-label="Default select example" name="sun_requirement">
                <option selected>More sun or more shade</option>
                <option class="form-control" type="string" value="Full sun">Full sun</option>
                <option class="form-control" type="string" value="Part sun">Part sun</option>
                <option class="form-control" type="string" value="Part shade">Part shade</option>
                <option class="form-control" type="string" value="Full shade">Full shade</option>
            </select>
            <label class="form-label">Add image:</label><br>
            <div class="col-sm-2 imgUp">
                <div class="imagePreview"></div>
                <label class="btn btn-primary">Upload
                <input class="uploadFile img form-control" type="file" value="Upload Photo" style="width:0px;height:0px;overflow:hidden;">
                </label>
                <i class="fa fa-times del"></i>
            </div>'
        </fieldset>
        <input type="submit" value="Create New Plant" class="btn btn-success">
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}