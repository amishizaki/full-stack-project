{% layout 'layout.liquid' %}
{% block content %}

    <div class="container-sm">
        <form action="/plants" method="POST">
            <fieldset>
                <legend style="margin-top: 20px; font-size: 30px">Create New Plant</legend>
                <label class="form-label">Name: </label>
                <input 
                    class="form-control"
                    type="text" 
                    name="name"
                    required="true" 
                    placeholder="Enter plant name"
                >
                <label class="form-label">Scientific Name:</label>
                <input 
                    class="form-control"
                    type="string" 
                    name="scientific_name" 
                    placeholder="Enter scientific name" 
                >
                <label class="form-label">Description:</label>
                <textarea 
                    class="form-control"
                    type="string" 
                    name="description" 
                    placeholder="Describe plant here" 
                >
                </textarea>
                <label class="form-label">Perennial or Annual:</label>
                <select class="form-select" aria-label="Default select example" name="perrenial">
                    <option selected>Perennial or Annual</option>
                    <option class="form-control" type="string" value="Perennial">Perennial</option>
                    <option class="form-control" type="string" value="Annual">Annual</option>
                </select>
                <label class="form-label">Sun conditions:</label>
                <select class="form-select" aria-label="Default select example" name="sun_requirement">
                    <option selected>More sun or more shade</option>
                    <option class="form-control" type="string" value="Full sun">Full sun</option>
                    <option class="form-control" type="string" value="Part sun">Part sun</option>
                    <option class="form-control" type="string" value="Part shade">Part shade</option>
                    <option class="form-control" type="string" value="Full shade">Full shade</option>
                </select>

                {%- comment -%} <label class="form-label">Add image:</label><br> {%- endcomment -%}
                {%- comment -%} 
                <form>
                    <input type="text" id="imagename" value="" />
                    <input type="button" id="btn" value="GO" />
                </form>
                <script type="text/javascript">
                    document.getElementById('btn').onclick = function() {
                        const val = document.getElementById('imagename').value,
                            src = 'http://webpage.com/images/' + val +'.png',
                            img = document.createElement('img');
                            img.src = src;
                            document.body.appendChild(img);
                        }
                </script>
                <img id="the-image"> {%- endcomment -%}

                {%- comment -%} image upload code to be utilized at later date {%- endcomment -%}
                {%- comment -%} <div class="col-sm-2 imgUp" style="margin:auto; width: 50%; padding: 10px">
                    <div class="imagePreview"></div>
                    <label class="btn btn-success">Upload
                    <input class="uploadFile img" type="file" name="image" value="Upload Photo">
                    
                    </label>
                    <i class="fa fa-times del"></i>
                </div> {%- endcomment -%}
            </fieldset>
            <input type="submit" value="Create New Plant" class="btn btn-success" style="margin-bottom: 20px;">
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %} 