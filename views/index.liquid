{% layout 'layout.liquid' %}
{% block content %}
    {% if loggedIn %}
        <div class="col-mb-4">
            <h1 class="display-4">So you want to talk about plants, iGardner?</h1>
            {%- comment -%} <img class="img-thumbnail img-fluid" src="../gardener-sleeping-on-lawn.jpeg" alt="image of a garden"> {%- endcomment -%}
    {% else %}
        <div class="col-mb-4">
            <h1 class="display-4">Welcome To The iGarden App</h1>
            <h4>This app is all about gardening</h4>
            {%- comment -%} <img class="img-thumbnail img-fluid" src="../stone-walkway-leading-garden.jpeg" alt="image of a garden"> {%- endcomment -%}
        </div>
        <div class="btn-group btn-group-lg mt-4">
            <a href="/auth/signup" class="btn btn-success">Sign Up</a>
            <a href="/auth/login" class="btn btn-success">Sign In</a>
        </div>
    {% endif %}
{% endblock %}
