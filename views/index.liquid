{% layout 'layout.liquid' %}
{% block content %}
    {% if loggedIn %}
        <div class="col-mb-4">
            <h1 class="display-4">Let's talk about plants, iGardner</h1>
            <img src="../public/gardener-sleeping-on-lawn.jpeg" alt="image of a garden">
    {% else %}
        <div class="col-mb-4">
            <h1 class="display-4">Welcome To The iGarden App</h1>
            <h5>This app is all about gardening</h5>
            <img src="../public/stone-walkway-leading-garden.jpeg" alt="image of a garden">
        </div>
        <div class="btn-group btn-group-lg mt-4">
            <a href="/auth/signup" class="btn btn-success">Sign Up</a>
            <a href="/auth/login" class="btn btn-success">Login</a>
        </div>
    {% endif %}
{% endblock %}
