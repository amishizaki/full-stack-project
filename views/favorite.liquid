{% block content %}
    <div class="card mb-4 shadow">
        <div class="card-body">
            {%- comment -%} <p>{{ favorite.note }}</p>
            <div class="d-flex justify-content-between">
                <small>author: {{ favorite.author }}</small> {%- endcomment -%}
                {% if plant.author == userId %}
                    <form action="/favorite/delete/{{plant.id}}/{{favorite.id}}?_method=DELETE" method="POST">
                        <input class="btn btn-warning" type="submit" value="X">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}